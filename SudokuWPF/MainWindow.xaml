                    <Setter Property="FontSize" Value="18"></Setter>
                    <Setter Property="BorderBrush" Value="Black"></Setter>
                    <Setter Property="CaretBrush" Value="DodgerBlue"></Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
